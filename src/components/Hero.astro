---
import { HeroScene } from '../components/HeroScene';
---

<section class="relative min-h-screen pt-32 pb-20 px-6 overflow-hidden">
  <div class="absolute inset-0 z-0">
    <HeroScene client:load />
  </div>
  <div class="container mx-auto max-w-4xl relative z-10">
    <div class="text-center">
      <h1 class="font-orbitron text-5xl md:text-7xl font-bold mb-6 cyber-text animate-cyber-glow">
        Future of Development
      </h1>
      <p class="text-xl text-cyber-light/80 mb-8 max-w-2xl mx-auto">
        Pioneering the intersection of AI, Web Development, and Machine Learning
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-6 items-center">
        <a
          href="#contact"
          class="cyber-button px-8 py-4 rounded-lg font-orbitron text-cyber-blue group hover:scale-105 transition-transform duration-300"
        >
          <span class="group-hover:animate-pulse">Initialize Contact</span>
        </a>
        <a
          href="#projects"
          class="cyber-button px-8 py-4 rounded-lg font-orbitron text-cyber-purple group hover:scale-105 transition-transform duration-300"
        >
          <span class="group-hover:animate-pulse">View Projects</span>
        </a>
        <a
          href="https://ahmadyasin.vercel.app"
          target="_blank"
          rel="noopener noreferrer"
          class="cyber-button px-8 py-4 rounded-lg font-orbitron text-cyber-blue group hover:scale-105 transition-transform duration-300 relative overflow-hidden"
        >
          <span class="group-hover:animate-pulse">Visit Portfolio</span>
          <div class="absolute inset-0 bg-gradient-to-r from-cyber-blue/0 via-cyber-blue/20 to-cyber-blue/0 -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
        </a>
      </div>
    </div>
  </div>

  <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-cyber-dark to-transparent z-10"></div>
</section>

<style>
  .animate-cyber-glow {
    animation: cyber-glow 2s ease-in-out infinite alternate;
  }

  @keyframes cyber-glow {
    from {
      text-shadow: 0 0 10px #00fff5, 0 0 20px #00fff5;
    }
    to {
      text-shadow: 0 0 20px #00fff5, 0 0 30px #00fff5, 0 0 40px #00fff5;
    }
  }
</style>