---
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';
import '@fontsource/orbitron/400.css';
import '@fontsource/orbitron/500.css';
import '@fontsource/orbitron/600.css';
import '@fontsource/orbitron/700.css';
import Chatbot from '../components/Chatbot';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Ahmad Yasin - Full Stack Developer & ML Engineer" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-cyber-dark text-cyber-light">
    <div class="fixed inset-0 bg-cyber-grid bg-[size:50px_50px] opacity-20 pointer-events-none"></div>
    <div class="cyber-lines"></div>
    <slot />
    <Chatbot client:load />
  </body>
</html>

<style is:global>
  :root {
    --cyber-glow: 0 0 10px rgba(0, 255, 245, 0.5);
  }

  html {
    font-family: 'Inter', system-ui, sans-serif;
    background: #0a0a0a;
    overflow-x: hidden;
  }

  .cyber-border {
    position: relative;
    border: 1px solid rgba(0, 255, 245, 0.3);
  }

  .cyber-border::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, #00fff5, transparent, #ff00ff);
    z-index: -1;
    filter: blur(8px);
    opacity: 0.5;
  }

  .cyber-text {
    color: #00fff5;
    text-shadow: 0 0 10px rgba(0, 255, 245, 0.5);
  }

  .cyber-button {
    position: relative;
    background: linear-gradient(45deg, rgba(0, 255, 245, 0.1), rgba(255, 0, 255, 0.1));
    border: 1px solid rgba(0, 255, 245, 0.3);
    overflow: hidden;
  }

  .cyber-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(0, 255, 245, 0.2),
      transparent
    );
    transition: 0.5s;
  }

  .cyber-button:hover::before {
    left: 100%;
  }

  .cyber-lines {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 1;
    background: 
      repeating-linear-gradient(
        to bottom,
        transparent 0%,
        transparent 98%,
        rgba(0, 255, 245, 0.1) 98%,
        rgba(0, 255, 245, 0.1) 100%
      );
    background-size: 100% 8px;
    opacity: 0.1;
    animation: scan 8s linear infinite;
  }

  @keyframes scan {
    from {
      transform: translateY(0);
    }
    to {
      transform: translateY(8px);
    }
  }

  /* Glitch effect */
  @keyframes glitch {
    0% {
      clip-path: polygon(0 2%, 100% 2%, 100% 5%, 0 5%);
    }
    2% {
      clip-path: polygon(0 15%, 100% 15%, 100% 15%, 0 15%);
    }
    4% {
      clip-path: polygon(0 10%, 100% 10%, 100% 20%, 0 20%);
    }
    6% {
      clip-path: polygon(0 1%, 100% 1%, 100% 2%, 0 2%);
    }
    8% {
      clip-path: polygon(0 33%, 100% 33%, 100% 33%, 0 33%);
    }
    10% {
      clip-path: polygon(0 44%, 100% 44%, 100% 44%, 0 44%);
    }
    12% {
      clip-path: polygon(0 50%, 100% 50%, 100% 20%, 0 20%);
    }
    14% {
      clip-path: polygon(0 70%, 100% 70%, 100% 70%, 0 70%);
    }
    16% {
      clip-path: polygon(0 80%, 100% 80%, 100% 80%, 0 80%);
    }
    18% {
      clip-path: polygon(0 50%, 100% 50%, 100% 55%, 0 55%);
    }
    20% {
      clip-path: polygon(0 70%, 100% 70%, 100% 80%, 0 80%);
    }
    100% {
      clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%);
    }
  }

  .glitch-text {
    position: relative;
  }

  .glitch-text::before,
  .glitch-text::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .glitch-text::before {
    left: 2px;
    text-shadow: -2px 0 #ff00ff;
    animation: glitch 3s infinite linear alternate-reverse;
  }

  .glitch-text::after {
    left: -2px;
    text-shadow: 2px 0 #00fff5;
    animation: glitch 2s infinite linear alternate-reverse;
  }
</style>